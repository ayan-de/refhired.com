generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id               String      @id @default(cuid())
  email            String      @unique
  userName         String      @unique
  emailVerified    DateTime?
  image            String?
  name             String?
  bio              String?
  locale           String?
  location         String?
  stars            Int?        @default(0)
  createdAt        DateTime?   @default(now())
  updatedAt        DateTime?   @updatedAt
  workingAt        String?
  stripeCustomerId String?     @unique
  accounts         Account[]
  applied          Applied[]
  bookmarks        Bookmarks[]
  comments         Comments[]
  posts            Posts[]
  sessions         Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  providerAccountId String
  access_token      String?
  expires_at        Int?
  id_token          String?
  provider          String
  refresh_token     String?
  scope             String?
  session_state     String?
  token_type        String?
  type              String
  user              User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Posts {
  id            Int         @id @default(autoincrement())
  userId        String
  description   String?
  createdAt     DateTime    @default(now())
  expiresAt     DateTime?
  role          String?
  jobType       String?
  experience    Int?
  location      String?
  startingRange Int?
  endingRange   Int?
  image         String?
  updatedAt     DateTime    @updatedAt
  postType      postType    @default(post)
  applied       Applied[]
  bookmarks     Bookmarks[]
  comments      Comments[]
  tags          Tags[]
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum postType {
  referralPost
  seekReferralPost
  post
}

model Applied {
  id        Int      @id @default(autoincrement())
  userId    String
  postId    Int
  createdAt DateTime @default(now())
  message   String?
  posts     Posts    @relation(fields: [postId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
}

model Tags {
  id    String  @id @default(cuid())
  name  String  @unique
  posts Posts[]
}

model Comments {
  id        Int      @id @default(autoincrement())
  text      String
  userId    String
  postId    Int
  createdAt DateTime @default(now())
  posts     Posts    @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])
}

model Bookmarks {
  id        Int      @id @default(autoincrement())
  userId    String
  postId    Int
  createdAt DateTime @default(now())
  posts     Posts    @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, postId])
}
