{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:report": "turbo run lint:report",
    "format": "prettier --write apps/**/*.{js,ts,tsx} packages/**/*.{js,ts,tsx} *.json",
    "format:check": "prettier --check 'apps/**/*.{js,ts,tsx}' 'packages/**/*.{js,ts,tsx}'",
    "prepare": "husky install",
    "web": "yarn workspace @referrer/web"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "@referrer/prettier-config": "*",
    "eslint": "^7.32.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.5.1",
    "turbo": "^1.9.3"
  },
  "name": "referrer-monorepo",
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "(apps|packages)/**/*.{js,ts,jsx,tsx}": [
       "eslint",
      "prettier --write"
    ],
    "**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "packages/prisma/schema.prisma": [
      "prisma format"
    ]
  }
}
