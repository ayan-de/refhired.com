{
  "name": "referrer-monorepo",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "author": {
    "name": "Sayan De",
    "twitter": "https://twitter.com/sayande2002",
    "github": "https://github.com/sayande2002"
  },
  "description": "Monorepo for Referrer",
  "repository": {
    "type": "git",
    "url": "https://github.com/sayande2002/refhired.com"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "prepare": "husky install",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "web": "yarn workspace @referrer/web",
    "mobile": "yarn workspace @referrer/mobile",
    "desktop": "yarn workspace @referrer/desktop",
    "api": "yarn workspace @referrer/api",
    "swagger": "yarn workspace @referrer/swagger",
    "prisma": "yarn workspace @referrer/prisma",
    "ui": "yarn workspace @referrer/ui",
    "story": "yarn workspace @referrer/storybook",
    "eslint": "yarn workspace @referrer/eslint-config-custom",
    "prettier-config": "yarn workspace @referrer/prettier-config",
    "tailwind-config": "yarn workspace @referrer/tailwind-config",
    "dx": "docker compose up -d"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@referrer/prettier-config": "*",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.5.1",
    "turbo": "^1.10.9",
    "vitest": "^0.33.0"
  },
  "lint-staged": {
    "(apps|packages)/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "packages/prisma/schema.prisma": [
      "prisma format"
    ]
  }
}
